@page
@model Kindergarten.Pages.Kindergartens.EditModel
@{
}
<br />
<h2>Edit Kindergarten</h2>

@if (Model.errorMessage.Length >0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <buttton type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></buttton>
    </div>
}

<form method ="POST">
    <input type="hidden" name="Id" value="@Model.kindergartenInfo.Id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">GroupName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="GroupName" value="@Model.kindergartenInfo.GroupName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ChildrenCount</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ChildrenCount" value="@Model.kindergartenInfo.ChildrenCount" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">KindergartenName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="KindergartenName" value="@Model.kindergartenInfo.KindergartenName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Teacher</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Teacher" value="@Model.kindergartenInfo.Teacher" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">UpdatedAt</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="UpdatedAt" value="@Model.kindergartenInfo.UpdatedAt" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <buttton type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></buttton>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class ="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class ="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
 </form>